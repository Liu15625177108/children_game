<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game3_4"

    tools:context="com.example.administrator.children_game.game3_4">

    <TextView
        android:id="@+id/textView_hour"
        android:layout_width="63dp"
        android:layout_height="27dp"
        android:text="12"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/imageView3_4_1"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3_4_1" />

    <TextView
        android:id="@+id/textView_minute"
        android:layout_width="63dp"
        android:layout_height="27dp"
        android:layout_marginBottom="8dp"
        android:text="30"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/imageView3_4_2"
        app:layout_constraintBottom_toTopOf="@+id/imageView3_4_4"
        app:layout_constraintTop_toTopOf="@+id/textView_hour"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView3_4_1"
        android:layout_width="50dp"
        android:layout_height="49dp"
        android:layout_marginBottom="322dp"
        android:layout_marginLeft="119dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/nothing"
        android:layout_marginStart="119dp" />

    <ImageView
        android:id="@+id/imageView3_4_4"
        android:layout_width="55dp"
        android:layout_height="49dp"
        app:srcCompat="@drawable/nothing"
        app:layout_constraintTop_toTopOf="@+id/imageView3_4_3"
        app:layout_constraintLeft_toLeftOf="@+id/imageView3_4_2" />

    <ImageView
        android:id="@+id/imageView3_4_2"
        android:layout_width="56dp"
        android:layout_height="49dp"
        app:srcCompat="@drawable/nothing"
        android:layout_marginRight="121dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3_4_1"
        android:layout_marginEnd="121dp" />

    <ImageView
        android:id="@+id/imageView3_4_3"
        android:layout_width="51dp"
        android:layout_height="46dp"
        app:srcCompat="@drawable/nothing"
        app:layout_constraintLeft_toLeftOf="@+id/imageView3_4_1"
        android:layout_marginTop="57dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3_4_1" />

    <ImageView
        android:id="@+id/imageView3_4_btn"
        android:layout_width="95dp"
        android:layout_height="56dp"
        app:srcCompat="@drawable/nothing"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="152dp"
        android:layout_marginRight="144dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="144dp" />

</android.support.constraint.ConstraintLayout>
