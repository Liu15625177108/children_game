<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jiemian"
    tools:context="com.example.administrator.children_game.game3">

    <ImageView
        android:id="@+id/imageView_game3_3"
        android:layout_width="161dp"
        android:layout_height="160dp"
        app:srcCompat="@drawable/cola"
        android:layout_marginTop="49dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView_game3_1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imageView_game3_1"
        android:layout_width="161dp"
        android:layout_height="160dp"
        app:srcCompat="@drawable/cola"
        app:layout_constraintRight_toLeftOf="@+id/imageView_game3_2"
        android:layout_marginRight="43dp"
        app:layout_constraintTop_toTopOf="@+id/imageView_game3_2"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/imageView_game3_4"
        android:layout_width="161dp"
        android:layout_height="159dp"
        app:srcCompat="@drawable/cola"
        app:layout_constraintLeft_toRightOf="@+id/imageView_game3_3"
        android:layout_marginLeft="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="54dp" />

    <ImageView
        android:id="@+id/imageView_game3_2"
        android:layout_width="161dp"
        android:layout_height="160dp"
        app:srcCompat="@drawable/cola"
        android:layout_marginBottom="49dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView_game3_4"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginLeft="207dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imageView_game3_true"
        android:layout_width="161dp"
        android:layout_height="160dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/cola1"
        android:layout_marginBottom="49dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView_game3_4"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginLeft="207dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="252dp"
        android:layout_height="82dp"
        android:text="下面那瓶是真的可乐？"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="16dp" />

</android.support.constraint.ConstraintLayout>
